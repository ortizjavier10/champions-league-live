{
  "name": "champions-league-live",
  "version": "1.0.0",
  "description": "Project 3",
  "main": "server/server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "heroku-postbuild": "cd client && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ortizjavier10/champions-league-live.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ortizjavier10/champions-league-live/issues"
  },
  "homepage": "https://github.com/ortizjavier10/champions-league-live#readme",
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "dotenv": "^8.2.0",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
